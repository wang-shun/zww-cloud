				#{signedDate,jdbcType=TIMESTAMP},
			</if>
			<if test="createTime != null">
				#{createTime,jdbcType=TIMESTAMP},
			</if>
			<if test="signed != null">
				#{signed,jdbcType=INTEGER},
			</if>
		</trim>
	</insert>
</mapper>


